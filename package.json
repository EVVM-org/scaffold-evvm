{
  "name": "scaffold-evvm",
  "version": "2.0.0",
  "description": "EVVM Signature Constructor Frontend - Build and execute EVVM signatures",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "scripts": {
    "dev": "npm run check-env && cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd frontend && npm start",
    "check-env": "node scripts/check-env.js",
    "lint": "cd frontend && npm run lint",
    "type-check": "cd frontend && npm run type-check"
  },
  "keywords": [
    "evvm",
    "ethereum",
    "blockchain",
    "signature-constructor",
    "nextjs",
    "viem"
  ],
  "author": "EVVM Organization",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {}
}
