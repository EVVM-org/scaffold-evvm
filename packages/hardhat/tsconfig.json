{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "./scripts/**/*.ts",
    "./deploy/**/*.ts",
    "./test/**/*.ts",
    "./hardhat.config.ts"
  ],
  "files": ["./hardhat.config.ts"]
}
