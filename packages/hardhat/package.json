{
  "name": "@scaffold-evvm/hardhat",
  "version": "1.0.0",
  "scripts": {
    "chain": "hardhat node --no-deploy",
    "compile": "cd ../foundry && forge build",
    "test": "hardhat test",
    "deploy": "ts-node scripts/deploy.ts",
    "deploy:local": "ts-node scripts/deploy.ts --network localhost",
    "deploy:sepolia": "ts-node scripts/deploy.ts --network sepolia",
    "deploy:arb-sepolia": "ts-node scripts/deploy.ts --network arbitrumSepolia",
    "clean": "hardhat clean && rm -rf ../foundry/out ../foundry/cache",
    "verify": "hardhat verify",
    "account:generate": "hardhat run scripts/generateAccount.ts",
    "account:list": "hardhat run scripts/listAccount.ts",
    "generate-abis": "ts-node scripts/generate-abis.ts"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.4.5",
    "solady": "^0.0.228"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-foundry": "^1.1.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.17",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "chai": "^4.3.0",
    "ethers": "^6.0.0",
    "hardhat": "^2.22.0",
    "hardhat-deploy": "^0.12.0",
    "hardhat-deploy-ethers": "^0.4.0",
    "hardhat-gas-reporter": "^1.0.8",
    "solidity-coverage": "^0.8.0",
    "ts-node": "^10.9.0",
    "typechain": "^8.3.0",
    "typescript": "^5.3.0"
  }
}
